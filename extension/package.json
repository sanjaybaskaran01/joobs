{
  "name": "joobs-job-tracker",
  "version": "1.0.0",
  "description": "Gamified job application tracking Chrome extension",
  "main": "index.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build-extension": "npm run build && npm run copy-files",
    "copy-files": "cp manifest.json build/ && cp -r public/* build/",
    "watch": "npm run build && chokidar 'src/**/*' -c 'npm run build-extension'"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "chokidar-cli": "^3.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": ".",
  "keywords": [
    "chrome-extension",
    "job-tracking",
    "gamification",
    "react",
    "job-applications"
  ],
  "author": "Your Name",
  "license": "MIT"
}
